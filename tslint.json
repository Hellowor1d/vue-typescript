{
    "extends": "tslint-config-airbnb-base",
    "globals": {
        "require": true
    },
    "rules": {
      "trailing-comma": [
        false,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          },
          "esSpecCompliant": true
        }
      ],

      "semicolon": [false, "always"],

      "variable-name": [
        false,
        "ban-keywords",
        "check-format",
        "allow-leading-underscore"
      ]

    }

}
